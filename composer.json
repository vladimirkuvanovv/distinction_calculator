{
    "name": "utilitypack/diffutility",
    "type": "library",
    "description": "cli tool",
    "keywords": [
        "cli",
        "tool"
    ],
    "license": "MIT",
    "bin": [
        "bin/gendiff"
    ],
    "authors": [
        {
            "name": "Vladimir",
            "email": "vovan986021@gmail.com"
        }
    ],
    "scripts": {
        "phpcs": "phpcs",
        "psysh": "psysh",
        "phpcbf": "phpcbf",
        "phpunit": "phpunit",
        "test": "phpunit tests"
    },
    "autoload": {
        "psr-4": {
            "App\\Tests\\": "tests",
